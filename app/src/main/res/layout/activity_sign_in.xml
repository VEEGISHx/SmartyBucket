<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_background"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="104dp"
            android:layout_height="101dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/dissertation_project_logo_black" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="267dp"
            android:layout_height="46dp"
            android:layout_marginStart="70dp"
            android:gravity="center"
            android:text="SMARTY"
            android:textColor="#000000"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="267dp"
            android:layout_height="46dp"
            android:layout_marginStart="70dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="BUCKET"
            android:textColor="#000000"
            android:textSize="36sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="Sign Up"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="267dp"
            android:layout_height="43dp"
            android:layout_marginStart="70dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="Create an account to keep track of your expenses anywhere you go"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />


        <Button
            android:id="@+id/loginWithFacebook"
            android:layout_width="285dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_facebook_btn"
            android:backgroundTint="#3C5A99"
            android:text="@string/login_with_facebook"
            android:textColor="#FFFFFF"
            app:icon="@drawable/com_facebook_button_icon" />

        <Button
            android:id="@+id/buttonEmailLogin"
            android:layout_width="285dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_background"
            android:backgroundTint="#FFFFFF"
            android:text="@string/create_account_with_email"
            android:textColor="#010031"
            app:icon="@drawable/ic_email_black_24dp"
            app:iconTint="#010031" />

    </LinearLayout>
</FrameLayout>