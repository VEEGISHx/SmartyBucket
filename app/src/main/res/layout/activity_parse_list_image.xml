<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#000000"
    tools:context=".parseListImage">

    <Button
        android:id="@+id/extract_items"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@id/selected_list_image"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#0011FD"
        android:text="ADD TO BASKET"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.348"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/selected_list_image"
        android:layout_width="416dp"
        android:layout_height="479dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/listImageView"
        android:layout_width="411dp"
        android:layout_height="486dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.514"
        app:srcCompat="@drawable/shadow_overlay" />

    <TextView
        android:id="@+id/placeholder_list_text_header"
        android:layout_width="184dp"
        android:layout_height="31dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:text="Analyzing Image"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/placeholder_list_text_sub"
        android:layout_width="226dp"
        android:layout_height="22dp"
        android:layout_marginStart="32dp"
        android:text="Extracting items..."
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_list_text_header" />

    <TextView
        android:id="@+id/extractedText"
        android:layout_width="285dp"
        android:layout_height="102dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/listImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>